<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context="batch9.upcomingdevelopers.com.icare.AddDietActivity">


        <Spinner
            android:id="@+id/dietTypeAddDietSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_round"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_round"
            android:gravity="center"
            android:weightSum="1">


            <EditText
                android:id="@+id/menuAddDietEv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".9"
                android:gravity="center"
                android:hint="Menu"
                android:text=""
                android:lines="1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textColorHint="#80ffffff"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_round"
            android:gravity="center"
            android:weightSum="1">


            <TextView
                android:id="@+id/datePickerAddDietEt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".9"
                android:focusable="false"
                android:gravity="center"
                android:hint="Pick Date"
                android:onClick="datePicker"
                android:text=""
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textColorHint="#80ffffff"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_round"
            android:gravity="center"
            android:weightSum="1">


            <TextView
                android:id="@+id/timePickerAddDietTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".9"
                android:focusable="false"
                android:gravity="center"
                android:hint="Pick Time"
                android:onClick="timePicker"
                android:text=""
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textColorHint="#80ffffff" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_round"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Daily Alarm"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#80ffffff"
                    android:textColorHint="#80ffffff"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Switch
                        android:id="@+id/alarmAddDietSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Reminder"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#80ffffff"
                    android:textColorHint="#80ffffff"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Switch
                        android:id="@+id/reminderAddDietSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>