<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:orientation="vertical"
        android:padding="10dp"
        tools:context="batch9.upcomingdevelopers.com.icare.AddProfileActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:weightSum="1"
            android:background="@drawable/shape_round"
            android:gravity="center">

            <EditText
                android:id="@+id/nameAddProfileEt"
                android:layout_width="match_parent"
                android:hint="Name"
                android:gravity="center"
                android:lines="1"
                android:maxLines="1"
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#99ffffff"
                android:textColorHint="#99ffffff"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="30dp"
            android:weightSum="1"
            android:background="@drawable/shape_round"
            android:gravity="center">

            <EditText
                android:id="@+id/ageAddProfileEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Age in Year"
                android:inputType="numberDecimal"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#99ffffff"
                android:textColorHint="#99ffffff"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="30dp"
            android:weightSum="1"
            android:background="@drawable/shape_round"
            android:gravity="center">

            <EditText
                android:id="@+id/heightAddProfileEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Height in Inch"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#99ffffff"
                android:textColorHint="#99ffffff"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="30dp"
            android:weightSum="1"
            android:background="@drawable/shape_round"
            android:gravity="center">

            <EditText
                android:id="@+id/weightAddProfileEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Weight in Kg"
                android:inputType="numberDecimal"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#99ffffff"
                android:textColorHint="#99ffffff"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>