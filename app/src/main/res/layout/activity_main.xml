<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="batch9.upcomingdevelopers.com.icare.MainActivity"
    android:background="#fafafa">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="#fafafa"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/f">
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#fafafa">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#fafafa"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingRight="2dp">

                    <Button
                        android:id="@+id/addProfileBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="22dp"
                        android:layout_gravity="center_vertical"
                        android:onClick="addProfile"
                        android:text="Add Profile"
                        android:textStyle="bold"
                        android:background="#994CAF50"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="2dp">

                    <Button
                        android:id="@+id/viewProfileBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="22dp"
                        android:layout_gravity="center_vertical"
                        android:onClick="viewProfile"
                        android:text="View Profile"
                        android:textStyle="bold"
                        android:background="#994CAF50"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFFFFF"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingRight="2dp"
                    android:paddingLeft="5dp"
                    android:paddingBottom="5dp"
                    >

                    <Button
                        android:id="@+id/viewHospitalListBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:textSize="22dp"
                        android:onClick="viewHospitalList"
                        android:text="Hospital Info"
                        android:textStyle="bold"
                        android:background="#994CAF50"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="2dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    >

                    <Button
                        android:id="@+id/viewGeneralInfoBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:textSize="22dp"
                        android:onClick="generalInfo"
                        android:text="Health Tips"
                        android:textStyle="bold"
                        android:background="#994CAF50"/>


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
