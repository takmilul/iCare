<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:orientation="vertical"
        android:padding="10dp"
        tools:context="batch9.upcomingdevelopers.com.icare.UpdateDietActivity">

        <TextView
            android:id="@+id/typeUpdateDietTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:hint="Breakfast"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textColorHint="#80ffffff"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_round"
            android:gravity="center_vertical">


            <EditText
                android:id="@+id/menuUpdateDietEv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Menu"
                android:text=""
                android:gravity="center"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="#99ffffff"
                android:textColorHint="#99ffffff"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_round"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/datePickerUpdateDietTv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:hint="Pick Date"
                android:onClick="datePicker"
                android:text=""
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#99ffffff"
                android:textColorHint="#99ffffff"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:background="@drawable/shape_round">

            <TextView
                android:id="@+id/timePickerUpdateDietTv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:hint="Pick Time"
                android:onClick="timePicker"
                android:text=""
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#99ffffff"
                android:textColorHint="#99ffffff"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_round"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Daily Alarm"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#80ffffff"
                    android:textColorHint="#80ffffff"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Switch
                        android:id="@+id/alarmUpdateDietSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:gravity="center"
                    android:text="Reminder"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#80ffffff"
                    android:textColorHint="#80ffffff"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Switch
                        android:id="@+id/reminderUpdateDietSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>



    </LinearLayout>
</ScrollView>